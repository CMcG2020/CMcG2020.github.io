---
import Icon from '@/components/Icon.astro';
import { base } from '@/utils/base';

interface Props {
  title: string;
  description: string;
  category: string;
  image?: string;
  slug: string;
  tags?: string[];
  featured?: boolean;
}

const { title, description, category, image, slug, tags = [], featured = false } = Astro.props;

const categoryColors: Record<string, string> = {
  Development: 'var(--color-accent)',
  Apps: 'var(--color-accent-alt)',
  Writing: 'var(--color-accent-purple)',
  Documentation: 'var(--color-accent-purple)',
};

const categoryColor = categoryColors[category] || 'var(--color-accent)';
---

<article class:list={['project-card', { featured }]}>
  <a href={`${base}work/${slug}`} class="card-link">
    <div class="card-image">
      {image ? (
        <img src={image} alt={title} loading="lazy" />
      ) : (
        <div class="placeholder-image" data-category={category}>
          <div class="placeholder-pattern"></div>
          <div class="placeholder-icon">
            {category === 'Development' && <Icon name="development" size={32} />}
            {category === 'Apps' && <Icon name="apps" size={32} />}
            {(category === 'Writing' || category === 'Documentation') && (
              <Icon name="writing" size={32} />
            )}
          </div>
        </div>
      )}
      <span class="category-badge" style={`--category-color: ${categoryColor}`}>
        {category}
      </span>
    </div>
    <div class="card-content">
      <h3 class="card-title">{title}</h3>
      <p class="card-description">{description}</p>
      <div class="card-tags" data-empty={tags.length === 0}>
        {tags.slice(0, 3).map(tag => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </div>
  </a>
</article>

<style>
  .project-card {
    background-color: var(--color-surface-elevated);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: border-color var(--transition-base);
    height: 100%;
  }

  .project-card:hover {
    border-color: var(--color-accent);
  }

  .project-card.featured {
    border-width: 2px;
    border-color: var(--color-accent);
  }

  .card-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .card-image {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background-color: var(--color-surface);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .project-card:hover .card-image img {
    transform: scale(1.05);
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .placeholder-image[data-category="Development"] {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  }

  .placeholder-image[data-category="Apps"] {
    background: linear-gradient(135deg, #2d1b4e 0%, #1a1a2e 50%, #16213e 100%);
  }

  .placeholder-image[data-category="Writing"] {
    background: linear-gradient(135deg, #1a1a2e 0%, #2d1b4e 50%, #4a1942 100%);
  }

  .placeholder-image[data-category="Documentation"] {
    background: linear-gradient(135deg, #1a1a2e 0%, #2d1b4e 50%, #4a1942 100%);
  }

  .placeholder-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.15;
    background-image:
      radial-gradient(circle at 25% 25%, var(--color-accent) 1px, transparent 1px),
      radial-gradient(circle at 75% 75%, var(--color-accent) 1px, transparent 1px);
    background-size: 24px 24px;
  }

  .placeholder-icon {
    position: relative;
    z-index: 1;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(4px);
  }

  .placeholder-icon svg {
    width: 32px;
    height: 32px;
    color: var(--color-accent);
  }

  .category-badge {
    position: absolute;
    top: var(--space-4);
    left: var(--space-4);
    padding: var(--space-1) var(--space-3);
    background-color: var(--category-color);
    color: white;
    font-family: var(--font-heading);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-sm);
  }

  .card-content {
    padding: var(--space-5);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card-title {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
    transition: color var(--transition-fast);
    color: var(--color-primary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-card:hover .card-title {
    color: var(--color-accent);
  }

  .card-description {
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: nowrap;
    gap: var(--space-2);
    overflow: hidden;
    margin-top: auto;
    min-height: 24px;
  }

  .tag {
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-surface);
    color: var(--color-text-muted);
    font-size: var(--text-xs);
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border);
    white-space: nowrap;
  }
</style>
