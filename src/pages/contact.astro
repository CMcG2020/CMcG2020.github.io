---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Icon from '@/components/Icon.astro';

const contactMethods = [
  {
    title: 'Email',
    value: 'mcgonigal.clairem@gmail.com',
    href: 'mailto:mcgonigal.clairem@gmail.com',
    icon: 'mail' as const,
  },
  {
    title: 'LinkedIn',
    value: 'linkedin.com/in/claire-mcgonigal-uk',
    href: 'https://www.linkedin.com/in/claire-mcgonigal-uk',
    icon: 'linkedin' as const,
  },
  {
    title: 'GitHub',
    value: 'github.com/CMcG2020',
    href: 'https://github.com/CMcG2020',
    icon: 'github' as const,
  },
];
---

<BaseLayout
  title="Contact - Claire McGonigal"
  description="Get in touch for data engineering projects, ETL pipelines, or cloud data platform solutions."
>
  <section class="section page-hero">
    <div class="container">
      <h1 class="page-title">Let's Work Together</h1>
      <p class="page-subtitle">
        Have a project in mind? I'd love to hear about it. Reach out directly via email or connect with me on LinkedIn.
      </p>
    </div>
  </section>

  <section class="section contact-section">
    <div class="container">
      <div class="contact-content">
        <h2 class="contact-heading">Get in Touch</h2>
        <p class="contact-text">
          I'm currently available for data engineering projects, vibe coding product builds, and content writing. Whether you need ETL pipelines, cloud data platforms, data governance consulting, rapid MVPs, or clear technical content, I'm here to help.
        </p>

        <div class="contact-methods">
          {contactMethods.map(method => (
            <a href={method.href} class="contact-method" target={method.href.startsWith('http') ? '_blank' : undefined} rel={method.href.startsWith('http') ? 'noopener noreferrer' : undefined}>
              <div class="method-icon">
                <Icon name={method.icon} size={24} />
              </div>
              <div class="method-content">
                <span class="method-title">{method.title}</span>
                <span class="method-value">{method.value}</span>
              </div>
            </a>
          ))}
        </div>

        <div class="availability">
          <div class="availability-dot"></div>
          <span>Currently available for new projects</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    padding-bottom: 0;
    text-align: center;
  }

  .page-title {
    margin-bottom: var(--space-4);
  }

  .page-subtitle {
    color: var(--color-text-muted);
    font-size: var(--text-xl);
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-section {
    padding-top: var(--space-8);
  }

  .contact-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .contact-heading {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-4);
  }

  .contact-text {
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-fast);
  }

  .contact-method:hover {
    border-color: var(--color-accent);
    transform: translateX(4px);
  }

  .method-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background);
    border-radius: var(--radius-md);
    color: var(--color-accent);
  }

  .method-content {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .method-title {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .method-value {
    font-family: var(--font-heading);
    font-weight: 600;
    color: var(--color-primary);
  }

  .availability {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background-color: color-mix(in srgb, var(--color-accent) 15%, transparent);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--color-accent-alt);
  }

  .availability-dot {
    width: 8px;
    height: 8px;
    background-color: var(--color-accent-alt);
    border-radius: var(--radius-full);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
