---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const contactMethods = [
  {
    title: 'Email',
    value: 'mcgonigal.clairem@gmail.com',
    href: 'mailto:mcgonigal.clairem@gmail.com',
    icon: 'mail',
  },
  {
    title: 'LinkedIn',
    value: 'linkedin.com/in/clairemcg',
    href: 'https://linkedin.com/in/clairemcg',
    icon: 'linkedin',
  },
  {
    title: 'GitHub',
    value: 'github.com/CMcG2020',
    href: 'https://github.com/CMcG2020',
    icon: 'github',
  },
];
---

<BaseLayout
  title="Contact - Claire McGonigal"
  description="Get in touch for data engineering projects, ETL pipelines, or cloud data platform solutions."
>
  <section class="section page-hero">
    <div class="container">
      <h1 class="page-title">Let's Work Together</h1>
      <p class="page-subtitle">
        Have a project in mind? I'd love to hear about it. Fill out the form below or reach out directly.
      </p>
    </div>
  </section>

  <section class="section contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2 class="contact-heading">Get in Touch</h2>
          <p class="contact-text">
            I'm currently available for data engineering projects. Whether you need ETL pipelines, cloud data platforms, or data governance consulting, I'm here to help.
          </p>

          <div class="contact-methods">
            {contactMethods.map(method => (
              <a href={method.href} class="contact-method" target={method.href.startsWith('http') ? '_blank' : undefined} rel={method.href.startsWith('http') ? 'noopener noreferrer' : undefined}>
                <div class="method-icon">
                  {method.icon === 'mail' && (
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                      <polyline points="22,6 12,13 2,6" />
                    </svg>
                  )}
                  {method.icon === 'linkedin' && (
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  )}
                  {method.icon === 'github' && (
                    <svg viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  )}
                </div>
                <div class="method-content">
                  <span class="method-title">{method.title}</span>
                  <span class="method-value">{method.value}</span>
                </div>
              </a>
            ))}
          </div>

          <div class="availability">
            <div class="availability-dot"></div>
            <span>Currently available for new projects</span>
          </div>
        </div>

        <div class="contact-form-wrapper">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    padding-bottom: 0;
  }

  .page-title {
    margin-bottom: var(--space-4);
  }

  .page-subtitle {
    color: var(--color-text-muted);
    font-size: var(--text-xl);
    max-width: 600px;
  }

  .contact-section {
    padding-top: var(--space-8);
  }

  .contact-grid {
    display: grid;
    gap: var(--space-12);
  }

  .contact-heading {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-4);
  }

  .contact-text {
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
    max-width: 400px;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-fast);
  }

  .contact-method:hover {
    border-color: var(--color-accent);
    transform: translateX(4px);
  }

  .method-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-background);
    border-radius: var(--radius-md);
    color: var(--color-accent);
  }

  .method-icon svg {
    width: 20px;
    height: 20px;
  }

  .method-content {
    display: flex;
    flex-direction: column;
  }

  .method-title {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .method-value {
    font-family: var(--font-heading);
    font-weight: 600;
    color: var(--color-primary);
  }

  .availability {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background-color: rgba(78, 205, 196, 0.1);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--color-accent-alt);
  }

  .availability-dot {
    width: 8px;
    height: 8px;
    background-color: var(--color-accent-alt);
    border-radius: var(--radius-full);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .contact-form-wrapper {
    background-color: var(--color-surface);
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-border);
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
    }
  }
</style>
