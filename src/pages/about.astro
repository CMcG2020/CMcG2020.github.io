---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { base } from '@/utils/base';

const skills = {
  'Languages & Frameworks': ['Python', 'SQL', 'PySpark', 'Apache Spark'],
  'Cloud & Data Platforms': ['Microsoft Azure', 'Databricks', 'Azure Synapse', 'Microsoft Fabric', 'Azure Data Factory'],
  'Tools & DevOps': ['Docker', 'Terraform', 'Git', 'GitHub Actions', 'Version Control'],
  'Specialisations': ['API Integration', 'ETL/ELT Pipelines', 'Data Governance', 'Data Quality'],
};

const experience = [
  {
    title: 'Data Engineer - Redkite (Accenture)',
    company: 'London',
    period: 'Jan 2023 - Jan 2025',
    description: 'Designed and delivered modern data infrastructure and pipeline architectures in cloud environments for multiple global clients. Built reusable API ingestion frameworks and authored clean, modular PySpark code on Azure, Databricks and Microsoft Fabric.',
  },
  {
    title: 'Data Officer - Cabinet Office',
    company: 'London',
    period: 'Jan 2022 - Dec 2022',
    description: 'Led data quality assessments across government datasets. Authored data governance policies and managed Tableau partnerships. Supported data analysis and reporting initiatives for senior management.',
  },
  {
    title: 'Online English Teacher - Whales English',
    company: 'Remote',
    period: 'Oct 2018 - Aug 2021',
    description: 'Developed clear communication skills teaching ESL to international learners, with expertise in interactive instruction and stakeholder management.',
  },
];
---

<BaseLayout
  title="About - Claire McGonigal"
  description="Learn more about Claire McGonigal, a certified Data Engineer specialising in Azure, Databricks and PySpark."
>
  <section class="section page-hero">
    <div class="container">
      <div class="about-intro">
        <div class="about-content">
          <h1 class="page-title">Hi, I'm Claire McG</h1>
          <p class="about-lead">
            A certified Data Engineer with 3+ years experience delivering production-grade data pipelines and cloud data platforms.
          </p>
          <p>
            I specialise in enterprise data transformation projects using Azure, Databricks, and PySpark. Most recently at Accenture (Redkite), I designed modern data infrastructure and pipeline architectures for multiple global clients.
          </p>
          <p>
            My background includes UK government data governance at the Cabinet Office, where I led data quality assessments and authored governance policies. This experience gives me strong foundations in data quality, compliance, and documentation standards.
          </p>
          <p>
            I hold certifications including Microsoft Certified: Azure Data Engineer Associate, Databricks Apache Spark, and multiple Databricks Lakehouse credentials. Based in the UK and open to relocation and remote work.
          </p>
          <div class="about-cta">
            <a href={`${base}Claire-McGonigal-CV.pdf`} class="btn btn-primary" download>Download CV</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="section skills-section">
    <div class="container">
      <h2 class="section-title">Skills & Technologies</h2>
      <div class="skills-grid">
        {Object.entries(skills).map(([category, items]) => (
          <div class="skill-category">
            <h3 class="skill-category-title">{category}</h3>
            <div class="skill-tags">
              {items.map(skill => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section class="section experience-section">
    <div class="container">
      <h2 class="section-title">Experience</h2>
      <div class="timeline">
        {experience.map((item) => (
          <div class="timeline-item">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <span class="timeline-period">{item.period}</span>
              <h3 class="timeline-title">{item.title}</h3>
              <p class="timeline-description">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Want to work together?</h2>
        <p>I'm always open to discussing new projects and opportunities.</p>
        <div class="cta-buttons">
          <a href={`${base}contact`} class="btn btn-primary btn-lg">Get in Touch</a>
          <a href={`${base}Claire-McGonigal-CV.pdf`} class="btn btn-secondary btn-lg" download>Download CV</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-intro {
    display: flex;
    justify-content: center;
  }

  .about-content {
    max-width: 700px;
    text-align: center;
  }

  .page-title {
    margin-bottom: var(--space-4);
  }

  .about-lead {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
  }

  .about-cta {
    margin-top: var(--space-8);
  }

  /* Skills Section */
  .skills-section {
    background-color: var(--color-surface);
  }

  .skills-grid {
    display: grid;
    gap: var(--space-8);
    margin-top: var(--space-10);
  }

  .skill-category-title {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .skill-tag {
    padding: var(--space-2) var(--space-4);
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--color-text);
    transition: all var(--transition-fast);
  }

  .skill-tag:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  @media (min-width: 768px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Experience Section */
  .timeline {
    margin-top: var(--space-10);
    position: relative;
    padding-left: var(--space-8);
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background-color: var(--color-border);
  }

  .timeline-item {
    position: relative;
    padding-bottom: var(--space-8);
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: calc(-1 * var(--space-8) - 5px);
    top: 4px;
    width: 12px;
    height: 12px;
    background-color: var(--color-accent);
    border-radius: var(--radius-full);
  }

  .timeline-period {
    display: inline-block;
    font-size: var(--text-sm);
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: var(--space-2);
  }

  .timeline-title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-2);
  }

  .timeline-description {
    color: var(--color-text-muted);
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    background-color: var(--color-surface);
    margin-top: 0;
    border-top: 1px solid var(--color-border);
  }

  .cta-content {
    text-align: center;
    padding: var(--space-8) 0;
  }

  .cta-content h2 {
    color: var(--color-primary);
    margin-bottom: var(--space-4);
  }

  .cta-content p {
    color: var(--color-text-muted);
    font-size: var(--text-lg);
    margin-bottom: var(--space-8);
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }
</style>
