---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const { project } = Astro.props;
const { Content } = await project.render();

const categoryColors: Record<string, string> = {
  Development: 'var(--color-accent)',
  Apps: 'var(--color-accent-alt)',
  Writing: '#8b5cf6',
};

const categoryColor = categoryColors[project.data.category] || 'var(--color-accent)';
---

<BaseLayout
  title={`${project.data.title} - ClaireMcG`}
  description={project.data.description}
  image={project.data.image}
>
  <article class="project-page">
    <header class="project-header">
      <div class="container">
        <a href={`${base}work`} class="back-link">‚Üê Back to Work</a>
        <span class="project-category" style={`--category-color: ${categoryColor}`}>
          {project.data.category}
        </span>
        <h1 class="project-title">{project.data.title}</h1>
        <p class="project-description">{project.data.description}</p>

        {project.data.tags && project.data.tags.length > 0 && (
          <div class="project-tags">
            {project.data.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}

        {project.data.links && project.data.links.length > 0 && (
          <div class="project-links">
            {project.data.links.map((link: { label: string; url: string }) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-secondary"
              >
                {link.label}
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="icon">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                  <polyline points="15 3 21 3 21 9" />
                  <line x1="10" y1="14" x2="21" y2="3" />
                </svg>
              </a>
            ))}
          </div>
        )}
      </div>
    </header>

    {project.data.image && (
      <div class="project-hero-image">
        <div class="container">
          <img src={project.data.image} alt={project.data.title} />
        </div>
      </div>
    )}

    <div class="project-content">
      <div class="container">
        <div class="prose">
          <Content />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .project-page {
    padding-bottom: var(--space-16);
  }

  .project-header {
    padding: var(--space-16) 0 var(--space-8);
  }

  .back-link {
    display: inline-block;
    font-family: var(--font-heading);
    font-weight: 600;
    color: var(--color-accent);
    text-decoration: none;
    margin-bottom: var(--space-8);
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .project-category {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background-color: var(--category-color);
    color: white;
    font-family: var(--font-heading);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-sm);
    margin-bottom: var(--space-4);
  }

  .project-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
    max-width: 800px;
  }

  .project-description {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    max-width: 700px;
    margin-bottom: var(--space-6);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .tag {
    padding: var(--space-2) var(--space-4);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .icon {
    width: 16px;
    height: 16px;
  }

  .project-hero-image {
    margin-bottom: var(--space-12);
  }

  .project-hero-image img {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: var(--radius-lg);
  }

  .project-content .container {
    max-width: 800px;
  }

  .prose {
    font-size: var(--text-lg);
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-size: var(--text-2xl);
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
  }

  .prose :global(h3) {
    font-size: var(--text-xl);
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }

  .prose :global(p) {
    margin-bottom: var(--space-6);
  }

  .prose :global(ul), .prose :global(ol) {
    margin-bottom: var(--space-6);
    padding-left: var(--space-6);
  }

  .prose :global(li) {
    margin-bottom: var(--space-2);
  }

  .prose :global(pre) {
    background-color: var(--color-primary);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    overflow-x: auto;
    margin-bottom: var(--space-6);
  }

  .prose :global(code) {
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
  }

  .prose :global(img) {
    border-radius: var(--radius-lg);
    margin: var(--space-8) 0;
  }

  @media (min-width: 768px) {
    .project-title {
      font-size: var(--text-5xl);
    }
  }
</style>
